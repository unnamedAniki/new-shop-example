@{
    ViewData["Title"] = "Monolith";
}
    
        <div class="mdl-cell mdl-cell--8-col 
             mdl-card mdl-card--border
             mdl-shadow--2dp mdl-color--grey-400">
            <div class="mdl-card__title mdl-color-text--grey-100">
                <h2 class="mdl-card__title-text">Monolith</h2>
            </div>
            <div class="mdl-card__supporting-text mdl-color-text--grey-100">
                <p style="font-size: 28px;">Minimalistic shop </p>
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-color-text--grey-100 mdl-js-button mdl-js-ripple-effect"
                   asp-action="Index"
                   asp-controller="Product">
                    Let's shopping!
                </a>
            </div>
        </div>
